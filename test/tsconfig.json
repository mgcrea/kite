{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable"],
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./../src/*"],
      "test/*": ["./*"]
    }
  },
  "references": [{ "path": ".." }]
}
