{
  "root": true,
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "lib": ["DOM", "DOM.Iterable"],
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["src/**/*"]
}
